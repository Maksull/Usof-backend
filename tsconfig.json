{
  "compilerOptions": {
    "target": "es6",                          /* Specify ECMAScript target version */
    "module": "commonjs",                        /* Specify module code generation */
    "rootDir": "./src",                          /* Root directory of input files */
    "outDir": "./dist",                          /* Output directory for compiled files */
    "strict": true,                              /* Enable all strict type-checking options */
    "esModuleInterop": true,                     /* Enables emit interoperability */
    "experimentalDecorators": true,             /* Enables experimental decorators */
    "emitDecoratorMetadata": true,               /* Enables emit decorator metadata */
    "skipLibCheck": true,                         /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true     /* Ensure consistent casing */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
